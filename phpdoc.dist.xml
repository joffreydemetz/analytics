<?xml version="1.0" encoding="UTF-8"?>
<phpdoc>
    <title>JDZ Analytics</title>
    <parser>
        <target>../../docs/analytics/</target>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <visibility>public,protected,private</visibility>
        <extensions>
            <extension>php</extension>
        </extensions>
    </parser>
    <transformer>
        <target>../../docs/analytics/</target>
    </transformer>
    <transformations>
        <template name="responsive-twig"/>
    </transformations>
    <files>
        <file>shortcuts.php</file>
        <directory>src</directory>
		<ignore>tests/*</ignore>
    </files>
    <logging>
        <level>warning</level>
        <paths>
            <default>../../docs/_log/analytics/{DATE}.log</default>
            <errors>../../docs/_log/analytics/{DATE}.errors.log</errors>
        </paths>
    </logging>
</phpdoc>